<div>

<h1>Lista de Productos</h1>

{{#each products}}

    <h2>{{this.title}}</h2>
    <p>{{this.description}}</p>
    <p>Precio: $ {{this.price}}</p> 
    <p>Categoria {{this.category}}</p>

        <div>
            <a href="/api/v1/products/{{this._id}}">Ver Detalles</a>

            <form action="/add-to-cart" method="post">
                <input type="hidden" name="productId" value="{{ this._id }}">
                <button type="submit">Agregar al Carrito</button>
            </form>

            </div>
{{/each}}
    <div>
        <p>Pagina Actual {{page}}</p>
    </div>
    {{#if this.hasPrevPage}}
        <p>Pagina Previa {{prevPage}}</p>
        <a href="/api/v1/views/products?page={{prevPage}}">Anterior</a>
    {{/if}}

    {{#if this.hasNextPage}}
        <p>Pagina Siguiente {{nextPage}}</p>
        <a href="/api/v1/views/products?page={{nextPage}}">Siguiente</a>
    {{/if}}

</div>
